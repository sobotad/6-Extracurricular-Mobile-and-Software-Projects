<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.cochlearapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:textSize="24sp"
        android:text="Welcome to the CIRL Matching App!"
        android:layout_weight=".25" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:textSize="24sp"
        android:text="To get started, please watch the video below:\n"
        android:layout_weight=".25" />

    <LinearLayout
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:gravity="top|center"
       android:layout_weight=".4">
       <Button
           android:id="@+id/playVideo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Play Video"
           android:onClick="playVideo"
           android:gravity="center" />

   </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight=".1"
        android:gravity="right">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Next Page"
            android:textSize="28sp"
            android:background="#ff9966"
            android:onClick="go_consent"
            android:layout_gravity="bottom"
         />
    </LinearLayout>


</LinearLayout>
