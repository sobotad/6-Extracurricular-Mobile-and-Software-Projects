<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.cochlearapp.Instruction">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_weight=".1"
        android:layout_marginBottom="40sp"
        android:textColor="@android:color/black"
        android:text="Instructions:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:gravity="top|center_horizontal"
        android:textSize="20sp"
        android:text="In the following experiment, you will listen to a variety of words, and you will have to match them to the corresponding word that you think is the closest match. You will only be able to hit the play button once, so pay close attention to what you think the word is. Please give it your best guess before moving on to the next word. \n \n Good luck!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight=".1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Next Page"
            android:textSize="28sp"
            android:background="#ff9966"
            android:onClick="go_experiment"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
</LinearLayout>
