<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.sentencesapp.Instruction">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_weight=".1"
        android:layout_marginBottom="40sp"
        android:textColor="@android:color/black"
        android:text="Instructions:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:gravity="top"
        android:textSize="32sp"
        android:text="In the following experiment, you will have to listen to a variety of sentences, and repeat back what you thought you heard. First, you will press a button that will play the target sentence. Next, you'll hit a button called 'start recording', speak clearly into the microphone of your device, then hit 'stop recording', and continue until you've completed all trials. \n           Good luck!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight=".1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Next Page"
            android:textSize="28sp"
            android:background="#ff9966"
            android:onClick="go_experiment"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
</LinearLayout>
